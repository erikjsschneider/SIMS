<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: darkgrey" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sims.AddParts">
    <Label layoutX="25.0" layoutY="22.0" style="-fx-font-size: 20; -fx-font-family: SimSun;" text="Add Part" underline="true" />
    <HBox layoutX="170.0" layoutY="15.0" prefHeight="35.0" prefWidth="400.0">
        <children>
            <RadioButton fx:id="inhouse" mnemonicParsing="false" onAction="#partsTypeRadioButtonChanged" text="In-House">
                <padding>
                    <Insets top="10.0" />
                </padding>
            </RadioButton>
            <RadioButton fx:id="outsourced" mnemonicParsing="false" onAction="#partsTypeRadioButtonChanged" text="Outsourced">
                <padding>
                    <Insets left="100.0" top="10.0" />
                </padding>
            </RadioButton>
        </children>
    </HBox>

    <Label layoutX="70" layoutY="95" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="ID" />
    <TextField disable="true" layoutX="170.0" layoutY="80.0" prefHeight="45.0" prefWidth="160.0" style="-fx-background-color: darkgrey; -fx-border-style: solid" text="Auto Gen - Disabled" />
    <Label layoutX="70" layoutY="155" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Name" />
    <TextField layoutX="170.0" layoutY="140.0" prefHeight="45.0" prefWidth="160.0" promptText="Part Name" style="-fx-border-style: solid" />
    <Label layoutX="70" layoutY="215" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Inv" />
    <TextField layoutX="170.0" layoutY="200.0" prefHeight="45.0" prefWidth="160.0" promptText="Inv" style="-fx-border-style: solid" />
    <Label layoutX="70" layoutY="275" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Price/Cost" />
    <TextField layoutX="170.0" layoutY="260.0" prefHeight="45.0" prefWidth="160.0" promptText="Price/Cost" style="-fx-border-style: solid" />
    <Label layoutX="70" layoutY="335" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Max" />
    <TextField layoutX="170.0" layoutY="320.0" prefHeight="45.0" prefWidth="120.0" promptText="Max" style="-fx-border-style: solid" />
    <Label layoutX="350" layoutY="335" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Min" />
    <TextField layoutX="400.0" layoutY="320.0" prefHeight="45.0" prefWidth="120.0" promptText="Min" style="-fx-border-style: solid" />
    <Label fx:id="companyNameText" layoutX="70" layoutY="395" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Company Name" visible="false" />
    <TextField fx:id="companyNameField" layoutX="170.0" layoutY="380.0" prefHeight="45.0" prefWidth="160.0" promptText="Comp Nm" style="-fx-border-style: solid" visible="false" />
    <Label fx:id="machineIdText" layoutX="70" layoutY="395" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Machine ID" visible="false" />
    <TextField fx:id="machineIdField" layoutX="170.0" layoutY="380.0" prefHeight="45.0" prefWidth="160.0" promptText="Mach ID" style="-fx-border-style: solid" visible="false" />

    <Button fx:id="saveParts" disable="true" layoutX="300.0" layoutY="490.0" mnemonicParsing="false" onAction="#handleSavePartsButton" prefHeight="50.0" prefWidth="120.0" style="-fx-border-style: solid; -fx-border-color: black;" text="Save" />
    <Button fx:id="cancelParts" layoutX="450.0" layoutY="490.0" mnemonicParsing="false" onAction="#handleCancelPartsButton" prefHeight="50.0" prefWidth="120.0" style="-fx-border-style: solid; -fx-border-color: black;" text="Cancel" />
</AnchorPane>

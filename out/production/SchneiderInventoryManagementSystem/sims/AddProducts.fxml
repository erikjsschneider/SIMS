<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: darkgrey"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sims.AddProducts">
    <Text layoutX="45.0" layoutY="75.0" style="-fx-font-size: 20; -fx-font-family: SimSun;" text="Add Product"/>
    <Button fx:id="searchProducts" layoutX="620.0" layoutY="52.0" onAction="#searchProductsButton" prefHeight="28.0"
            prefWidth="70.0" text="Search"/>
    <TextField layoutX="700.0" layoutY="52.5" prefHeight="29.0" prefWidth="250.0"/>

    <Text layoutX="20" layoutY="150" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="ID"/>
    <TextField disable="true" layoutX="170.0" layoutY="80.0" prefHeight="45.0" prefWidth="160.0"
               style="-fx-background-color: darkgrey; -fx-border-style: solid" text="Auto Gen - Disabled"/>
    <Text layoutX="70" layoutY="170" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Name"/>
    <TextField layoutX="170.0" layoutY="140.0" prefHeight="45.0" prefWidth="160.0" promptText="Part Name"
               style="-fx-border-style: solid"/>
    <Text layoutX="70" layoutY="230" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Inv"/>
    <TextField layoutX="170.0" layoutY="200.0" prefHeight="45.0" prefWidth="160.0" promptText="Inv"
               style="-fx-border-style: solid"/>
    <Text layoutX="70" layoutY="290" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Price/Cost"/>
    <TextField layoutX="170.0" layoutY="260.0" prefHeight="45.0" prefWidth="160.0" promptText="Price/Cost"
               style="-fx-border-style: solid"/>
    <Text layoutX="70" layoutY="350" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Max"/>
    <TextField layoutX="170.0" layoutY="320.0" prefHeight="45.0" prefWidth="120.0" promptText="Max"
               style="-fx-border-style: solid"/>
    <Text layoutX="350" layoutY="350" style="-fx-font-size: 14; -fx-font-family: SimSun;" text="Min"/>
    <TextField layoutX="400.0" layoutY="320.0" prefHeight="45.0" prefWidth="120.0" promptText="Min"
               style="-fx-border-style: solid"/>

    <TableView layoutX="500.0" layoutY="110.0" prefHeight="200.0" prefWidth="600.0"
               style="-fx-border-style: solid; -fx-border-color: black; -fx-grid-lines-visible: true;">
        <columns>
            <TableColumn prefWidth="59.0" text="Part ID"/>
            <TableColumn prefWidth="332.0" text="Part Name"/>
            <TableColumn prefWidth="111.0" text="Inventory Level"/>
            <TableColumn prefWidth="95.0" text="Price per Unit"/>
        </columns>
    </TableView>
    <Button fx:id="addProducts" layoutX="1000.0" layoutY="330.0" onAction="#addProductsButton" prefHeight="40.0"
            prefWidth="90.0" text="Add" style="-fx-border-style: solid; -fx-border-color: black;"/>

    <TableView layoutX="500.0" layoutY="420.0" prefHeight="200.0" prefWidth="600.0"
               style="-fx-border-style: solid; -fx-border-color: black; -fx-grid-lines-visible: true;">
        <columns>
            <TableColumn prefWidth="59.0" text="Part ID"/>
            <TableColumn prefWidth="332.0" text="Part Name"/>
            <TableColumn prefWidth="111.0" text="Inventory Level"/>
            <TableColumn prefWidth="95.0" text="Price per Unit"/>
        </columns>
    </TableView>
    <Button fx:id="deleteProducts" layoutX="1000.0" layoutY="640.0" onAction="#deleteProductsButton" prefHeight="40.0"
            prefWidth="90.0" text="Delete" style="-fx-border-style: solid; -fx-border-color: black;"/>
    <Button fx:id="saveProducts" layoutX="890.0" layoutY="700.0" onAction="#deleteProductsButton" prefHeight="40.0"
            prefWidth="90.0" text="Save" style="-fx-border-style: solid; -fx-border-color: black;"/>
    <Button fx:id="cancelProducts" layoutX="1000.0" layoutY="700.0" onAction="#deleteProductsButton" prefHeight="40.0"
            prefWidth="90.0" text="Cancel" style="-fx-border-style: solid; -fx-border-color: black;"/>
</AnchorPane>
